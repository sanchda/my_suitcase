#!/bin/bash
SCRIPT_PATH="$(realpath "$0")"
SCRIPTS_DIR="$(dirname "$SCRIPT_PATH")/scripts"
if [ ! -d "$SCRIPTS_DIR" ]; then
    echo "Error: Directory $SCRIPTS_DIR does not exist"
    exit 1
fi

# Find all executable files in the directory and execute them
echo "Executing personalization scripts from $SCRIPTS_DIR..."
find "$SCRIPTS_DIR" -type f -executable | sort | while read -r script; do
    echo "Executing: $script"
    "$script" || echo "Error: Failed to execute $script"
done
